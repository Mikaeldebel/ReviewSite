@model ReviewSite.Models.ReviewModel
@{
    ViewData["Title"] = "Home Page";
}



<div class="row">
    <div class="col-md-5">
        <h2 class="text-left">Review a product</h2>
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Index">
                    <div asp-validation-summary="ModelOnly" class="text-center"></div>

                    <div class="form-group">
                        <label asp-for="ReviewerName" class="control-label"></label>
                        <input asp-for="ReviewerName" class="form-control" />
                        <span asp-validation-for="ReviewerName" class="text-center"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ProductName" class="control-label"></label>
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-center"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ReviewScore" class="checkbox-inline"><input type="checkbox" value="">1</label>
                        <label asp-for="ReviewScore" class="checkbox-inline"><input type="checkbox" value="">2</label>
                        <label asp-for="ReviewScore" class="checkbox-inline"><input type="checkbox" value="">3</label>
                        <label asp-for="ReviewScore" class="checkbox-inline"><input type="checkbox" value="">4</label>
                        <label asp-for="ReviewScore" class="checkbox-inline"><input type="checkbox" value="">5</label>
                        <label asp-for="ReviewScore" class="checkbox-inline"><input type="checkbox" value="">6</label>
                        <label asp-for="ReviewScore" class="checkbox-inline"><input type="checkbox" value="">7</label>
                        <label asp-for="ReviewScore" class="checkbox-inline"><input type="checkbox" value="">8</label>
                        <label asp-for="ReviewScore" class="checkbox-inline"><input type="checkbox" value="">9</label>
                        <label asp-for="ReviewScore" class="checkbox-inline"><input type="checkbox" value="">10</label>
                        <span asp-validation-for="ReviewScore" class="text-center"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Submit Review" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 
